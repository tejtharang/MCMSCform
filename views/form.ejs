<script>
	function addCourse(){
		$.ajax({
			url : "http://localhost:3000",
			type : 'GET',
			success : function() {
				console.log("reached here");

				var data1 = document.getElementById("courseName").value;
				var data2 = document.getElementById("courseGrade").value;

				$('#courseAddTable tbody:last').append("<tr><td>" + data1 + "</td><td>" + data2 + "</td><td>" + "<button class='removeCourse btn btn-danger' onclick='removeCourse()'>delete</button>" +"</td></tr>");
				$("#courseName").val("");
				$("#courseGrade").val("");        	    
			},
			error : function() {
				console.log('error');
			}
		});
	}
</script>
<script>
	function removeCourse(){
		$.ajax({
			url : "http://localhost:3000",
			type : 'GET',
			success : function() {
				$('.removeCourse').click(function(){console.log($(this).parent().parent().remove())});    	        	    
        		//$('.remove').parents('tr').first().remove();

        	},
        	error : function() {
        		console.log('error');
        	}
        });

	} 
</script>
<script type="text/javascript">
	function addMember(){
		$.ajax({
			url : "http://localhost:3000",
			type : 'GET',
			success : function() {
				console.log("reached here");
				var data1 = document.getElementById("memberPosition").value;
				var data2 = document.getElementById("memberName").value;
				var data3 = document.getElementById("memberEmail").value;

				$('#memberAddTable tbody:last').append("<tr><td>" + data1 + "</td><td>" + data2 + "</td><td>" + data3 + "</td><td>" +"<button class='removeMember btn btn-danger' onclick='removeMember()'>Delete</button>" +"</td></tr>");
				$("#memberName").val("");
				$("#memberPosition").val("");
				$("#memberEmail").val("");        	    
			},
			error : function() {
				console.log('error');
			}
		});
	}
</script>
<script>
	function removeMember(){
		$.ajax({
			url : "http://localhost:3000",
			type : 'GET',
			success : function() {
				$('.removeMember').click(function(){console.log($(this).parent().parent().remove())});    	        	    
        		//$('.remove').parents('tr').first().remove();

        	},
        	error : function() {
        		console.log('error');
        	}
        });

	} 
</script>
</head>
<body>
	<div class="container">
		<div class="panel panel-info">
			<div class="panel-heading">Introductory Section</div>
			<div class="panel-body">
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4"> 
							<label class="control-label" for="degreeSelect">
								Doctoral Degree Program
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-4"> 
							<select id="degree" class="form-control" name="degreeSelect" required>
