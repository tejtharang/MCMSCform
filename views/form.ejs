								<%degrees.forEach(function(degree){%>
								<option value=<%=degree%>><%=degree%></option>
								<%});%>    						
							</select>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="mastersInPassing">
								Have you applied for Master's in Passing?
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="mastersInPassingYes">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="mastersInPassingYes" name="mastersInPassing" required>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="mastersInPassingNo">
								No
							</label>

						</div>
						<div class="col-md-1">
							<input type="radio" id="mastersInPassingNo" name="mastersInPassing">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="graduation">
								Are you graduating this year?(Students graduating in summer should answer "yes" as well)
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="graduationYes">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="graduationYes" name="graduation" required>
						</div>
						<div class="col-md-1">
							<label class="control-label" id="graduationNo" for="graduation">
								No
							</label>

						</div>
						<div class="col-md-1">
							<input type="radio" id="graduationNo" name="graduation">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Section A starts -->
		<div class="panel panel-info">
			<div class="panel-heading">Section A | Program of Study - Status</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-md-3"> 
						<label class="control-label">
							Academic Year
							<sup class="star">*</sup>
						</label>
					</div>
					<div class="col-md-1"> 
						<label class="control-label" for="academicYearFrom">Fall</label>
					</div>
					<div class="col-md-1" > 
						<input class="form-control" type="text" id="academicYearFrom" name="academicYearFrom">
					</div>
					<div class="col-md-2"> 
						<label class="control-label" for="academicYearTo">Spring/Summer</label>
					</div>
					<div class="col-md-1"> 
						<input class="form-control" type="text" id="academicYearTo" name="academicYearTo">
					</div>

				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-3">
							<label class="control-label" for="firstName">
								First Name
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input class="form-control" type="text" id="firstName" name="firstName">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="lastName">
								LastName
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input class="form-control" type="text" id="lastName" name="lastName">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-3">
							<label class="control-label" for="idNumber">
								ASU ID/Student ID Number
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input class="form-control" type="text" id="idNumber" name="idNumber">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="asurite">
								ASURITE ID
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input class="form-control" type="text" id="asurite" name="asurite">
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group pad">
						<div class="col-md-3">
							<label class="control-label" for="programStartDate">
								Program Start Date
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input class="form-control" type="month" id="programStartDate" name="ProgramStartDate">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="asurite">
								Semester in Progress
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<select id="currentSemester" class="form-control" name="currentSemester">
								<option value="initial" disabled selected="selected">current semester</option>
								<%for(var i=1;i<=20;i++){%>
								<option value=<%=i%>><%=i%></option>
								<%}%>    						
							</select>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-3">
							<label class="control-label" for="gpa">
								Cumulative GPA
								<sup class="star">*</sup>
							</label>	
						</div>
						<div class="col-md-2">
							<input type="text" id="gpa" name="gpa" class="form-control">
						</div>
					</div>
				</div>

				<hr>
				<font size="2">
					<i><u>Courses taken previously</u></i>
				</font>
				<table class="table table-hover">
					<tr>
						<th>S.No.</th>
						<th>Course</th>
						<th>Grade</th>
					</tr>
					<% Courses = [{name:"MAT271",grade:"A+"}]; %>
					<% Courses.forEach(function(course){ %>
					<tr>
						<th><%= Courses.indexOf(course) + 1 %></th>
						<th><%= course.name %></th>
						<th><%= course.grade %></th>
					</tr>
					<%});%>
				</table>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="coursesAdd">
								Do you want to add courses for the current year?
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="coursesAdd">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="coursesAddYes" name="coursesAdd" required>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="coursesAdd">
								No
							</label>

						</div>
						<div class="col-md-1">
							<input type="radio" id="coursesAddNo" name="coursesAdd">
						</div>
					</div>
				</div>
				<table class="table table-hover pad" id="courseAddTable">
					<tr>
						<th>Course</th>
						<th>Grade</th>
						<th>Action</th>
					</tr>

				</table>
				<div class="row" id="addCourseRowDiv">
					<div class="form-group pad">
						<div class="col-md-2">
							<label class="control-label" for="coursesName">
								Course Name
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input type="text" id="courseName" class="form-control" name="courseName">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="courseGrade">
								Grade
							</label>
						</div>
						<div class="col-md-2">
							<input type="text" id="courseGrade" class="form-control" name="courseGrade">
						</div>
						<div class="col-md-2">
						</div>
						<div class="col-md-2">
							<!-- <button id="addCourse" onclick="add()">Add Course</button> -->
							<button id="addCourse" class="btn btn-success" onclick="addCourse()"> Add Course </button>
						</div>

					</div>

				</div>
				<div id="noCourseReasonDiv">
					<div class="row">
						<div class="form-group pad">
							<div class="col-md-5">
								<label class="control-label" for="reasonCourse">
									Please specify reason for not taking courses this year
									<sup class="star">*</sup>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group pad">
						<textarea class="form-control" name="reasonCourse" rows="3" cols="100" placeholder="Enter reason here"></textarea>
					</div>

				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="membersAdd">
								Do you want to add members to the advisory committee?
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="membersAdd">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="membersAddYes" name="membersAdd" required>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="membersAdd">
								No
							</label>

						</div>
						<div class="col-md-1">
							<input type="radio" id="membersAddNo" name="membersAdd">
						</div>
					</div>
				</div>
				<table class="table table-hover pad" id="memberAddTable">
					<tr>
						<th>Member Position</th>
						<th>Member Name</th>
						<th>Member Email ID</th>
					</tr>

				</table>
				<div class="row" id="addMemberRowDiv">
					<div class="form-group pad">
						<div class="col-md-1">
							<label class="control-label" for="memberPosition">
								Member Position
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<select id="memberPosition" class="form-control" name="memberPosition" required>
								<option value="initial" disabled selected="selected">-- position --</option>
								<option value="CHAIR">CHAIR</option>
								<option value="CO_CHAIR">CO-CHAIR</option>
								<option value="MEMBER">MEMBER</option>
							</select>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="memberName">
								Member Name
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input type="text" id="memberName" class="form-control" name="memberName">
						</div>
						<div class="col-md-1">
							<label class="control-label" for="memberEmail">
								Email ID
							</label>
						</div>
						<div class="col-md-3">
							<input type="email" id="memberEmail" class="form-control" name="memberEmail">
						</div>
						<div class="col-md-1">
							<!-- <button id="addCourse" onclick="add()">Add Course</button> -->
							<button id="addCourse" class="btn btn-success" onclick="addMember()"> Add Member </button>
						</div>

					</div>

				</div>
				<div id="noAdvisoryCommitteeReasonDiv">
					<div class="row">
						<div class="form-group pad">
							<div class="col-md-5">
								<label class="control-label" for="reasonAdvisoryCommittee">
									Please specify reason for not taking courses this year
									<sup class="star">*</sup>
								</label>
							</div>
						</div>
					</div>
					<div class="form-group pad">
						<textarea class="form-control" name="reasonAdvisoryCommittee" rows="3" cols="100" placeholder="Enter reason here"></textarea>
					</div>

				</div>
				<div id="metChairDiv">
					<div class="row">
						<div class="form-group pad">
							<div class="col-md-4">
								<label class="control-label" for="metChair">
									Have you met with the Chair in the current academic year?
									<sup class="star">*</sup>
								</label>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="metChair">
									Yes
								</label>
							</div>
							<div class="col-md-1">
								<input type="radio" id="metChairYes" name="metChair" required>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="coursesAddNo">
									No
								</label>

							</div>
							<div class="col-md-1">
								<input type="radio" id="metChairNo" name="metChair">
							</div>
						</div>
					</div>
					<div id="notMetChairReasonDiv">
						<div class="row">
							<div class="form-group pad">
								<div class="col-md-4">
									<label class="control-label" for="reasonNotMetChair">
										Please specify reason for not having met the chair
										<sup class="star">*</sup>
									</label>
								</div>
							</div>
						</div>
						<div class="form-group pad">
							<textarea class="form-control" name="reasonNotMetChair" rows="3" cols="100" placeholder="Enter reason here"></textarea>
						</div>
					</div>

				</div>
			</div> <!-- this div is for panel body -->

		</div>
		<div class="panel panel-info">
			<div class="panel-heading">Section B | Student Progress</div>
			<div class="panel-body">
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="prospectusDefense">
								Have you completed Prospectus Defense?
								<sup class="star">*</sup>
							</label>

						</div>
						<div class="col-md-1">
							<label class="control-label" for="prospectusDefenseCompleted">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="coursesAddYes" name="prospectusDefenseCompleted" value="1" required>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="prospectusDefenseCompleted">
								No
							</label>

						</div>
						<div class="col-md-1">
							<input type="radio" id="coursesAddNo" name="prospectusDefenseCompleted" value="0">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<fieldset>
							<div class="col-md-3">
								<label class="control-label" for="prospectusDefenseAnticipatedDate">
									Anticipated date for Prospectus Defense
									<sup class="star">*</sup>
								</label>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="prospectusAnticipatedDateSession">
									Semester
								</label>
							</div>
							<div class="col-md-2">
								<select class="form-control" id="prospectusAnticipatedDateSession" name="prospectusAnticipatedDateSession">
									<option value="session" disabled selected="selected">--session--</option>
									<option value="Spring">Spring</option>
									<option value="Summer">Summer</option>
									<option value="Fall">Fall</option>
								</select>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="prospectusAnticipatedDateYear" name="prospectusAnticipatedDateYear">
									Year
								</label>
								
							</div>
							<div class="col-md-2">
								<select class="form-control" id="prospectusAnticipatedDateYear" name="prospectusAnticipatedDateYear">
									<option value="year" disabled selected="selected"> Year </option>
									<%for(var i=2018;i<=2030;i++){%>
									<option value=<%=i%>><%=i%></option>
									<%}%>
								</select>
							</div>
						</fieldset>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="mtbi">
								Have you participated in MTBI?
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="mtbiParticipation">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="mtbiParticipationYes" name="mtbiParticipation" required value="1">
						</div>
						<div class="col-md-1">
							<label class="control-label" for="mtbiParticipation">
								No
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="mtbiParticipationNo" name="mtbiParticipation" value="0">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group">
						<div class="col-md-4">
							<label class="control-label" for="mtbiParticipationYear">
								Year of MTBI participation
							</label>
						</div>
						<div class="col-md-2">
							<select class="form-control" id="prospectusAnticipatedDateYear" name="prospectusAnticipatedDateYear">
								<option value="year" disabled selected="selected"> Year </option>
								<%for(var i=2000;i<=2030;i++){%>
								<option value=<%=i%>><%=i%></option>
								<%}%>
							</select>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="mtbiParticipationRole">
								Role
							</label>
						</div>
						<div class="col-md-2">
							<select class="form-control" id="mtbiParticipationRole" name="mtbiParticipationRole">
									<option value="role" disabled selected="selected">Role</option>
									<option value="Undergraduate Participant">Undergraduate Participant</option>
									<option value="Graduate Participant">Graduate Participant</option>
									<option value="Mentor">Mentor/Tutor</option>
								</select>
						</div>
					</div>
					
				</div>
				<div class="row">
					<div class="form-group pad">
						<fieldset>
							<div class="col-md-3">
								<label class="control-label" for="mtbiAnticipated">
									Anticipated date for MTBI participation
									<sup class="star">*</sup>
								</label>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="mtbiAnticipatedDateSession">
									Semester
								</label>
							</div>
							<div class="col-md-2">
								<select class="form-control" id="prospectusAnticipatedDateSession" name="prospectusAnticipatedDateSession">
									<option value="session" disabled selected="selected">--session--</option>
									<option value="Spring">Spring</option>
									<option value="Summer">Summer</option>
									<option value="Fall">Fall</option>
								</select>
							</div>
							<div class="col-md-1">
								<label class="control-label" for="prospectusAnticipatedDateYear" name="prospectusAnticipatedDateYear">
									Year
								</label>
								
							</div>
							<div class="col-md-2">
								<select class="form-control" id="prospectusAnticipatedDateYear" name="prospectusAnticipatedDateYear">
									<option value="year" disabled selected="selected"> Year </option>
									<%for(var i=2018;i<=2030;i++){%>
									<option value=<%=i%>><%=i%></option>
									<%}%>
								</select>
							</div>
						</fieldset>
					</div>
				</div>
				<div class="row">
					<div class="form-group pad">
						<div class="col-md-4">
							<label class="control-label" for="publications">
								Do you want to add publications for the current year?
							</label>
						</div>
						<div class="col-md-1">
							<label class="control-label" for="publicationsExist">
								Yes
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="publicationsExistYes" name="publicationsExist" value="1" required> 
						</div>
						<div class="col-md-1">
							<label class="control-label" for="publicationsExist">
								No
							</label>
						</div>
						<div class="col-md-1">
							<input type="radio" id="publicationsExistNo" name="publicationsExist" value="0"> 
						</div>

					</div>

				</div>	
				<table class="table table-hover pad" id="publicationsAddTable">
					<tr>
						<th class="col-md-2">Publication</th>
						<th class="col-md-2">Journal</th>
						<th class="col-md-2">Status</th>
						<th class="col-md-3">URL</th>
						<th class="col-md-2">DOI</th>
						<th class="col-md-1">Action</th>
					</tr>

				</table>
				<div class="row" id="addCourseRowDiv">
					<div class="form-group pad">
						<div class="col-md-2">
							<label class="control-label" for="publicationName">
								Publication Name
								<sup class="star">*</sup>
							</label>
						</div>
						<div class="col-md-2">
							<input type="text" id="publicationName" class="form-control" name="publicationName">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="journalName">
								Journal Name
							</label>
						</div>
						<div class="col-md-2">
							<input type="text" id="journalName" class="form-control" name="journalName">
						</div>
						<div class="col-md-2">
							<label class="control-label" for="publicationStatus">
								Status
							</label>
						</div>
						<div class="col-md-2">
							<select id="publicationStatus" class="form-control" name="publicationStatus">
								<option value="disabled" disabled selected="selected">--status--</option>
								<option value="Submitted">Submitted</option>
								<option value="Accepted">Accepted</option>
								<option value="Published">Published</option>
								<option value="ArXiv">ArXiv</option>
							</select>
						</div>
					</div>
				</div>
				<div class="row" id="publicationUrlDiv">
					<div class="form-group pad">
						<div class="col-md-2">
							<label class="control-label" for="publicationUrl">
								Publication URL
							</label>						
						</div>
						<div class="col-md-4">
							<input class="form-control" type="url" id="publicationUrl" name="publicationUrl">
						</div>
					</div>
				</div>
				<div class="row" id="publicationDoiDiv">
					<div class="form-group pad">
						<div class="col-md-2">
							<label class="control-label" for="publicationDoi">
								Publication DOI
							</label>						
						</div>
						<div class="col-md-4">
							<input class="form-control" type="url" id="publicationDoi" name="publicationDoi">
						</div>
					</div>
				</div>
				<div class="row">
						<div class="form-group pad">
							<div class="col-md-2">
							<!-- <button id="addCourse" onclick="add()">Add Course</button> -->
								<button id="addCourse" class="btn btn-success" onclick="addCourse()"> Add Course </button>
							</div>
							
						</div>
				</div>
			</div> <!-- this div is for panel body -->

		</div>
	</div>
	

</body>
</html>
